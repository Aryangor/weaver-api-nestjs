{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["src/@shared/*"],
      "@decorators/*": ["src/@shared/decorators/*"],
      "@dtos/*": ["src/@shared/dtos/*"],
      "@entities/*": ["src/@shared/entities/*"],
      "@guards/*": ["src/@shared/guards/*"],
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  },
    "include": ["src/**/*.ts", "src/@shared/scripts/**/*.js", "src/@shared/scripts/migration-create.mjs", "src/@shared/scripts/migration-revert.mjs", "src/@shared/scripts/migration-run.mjs"]
}
